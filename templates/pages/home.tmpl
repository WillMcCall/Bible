{{ define "pages/home" }}
<!DOCTYPE html>
<html lang="en">
<head>
    {{ template "partials/head" . }}
</head>
<body>
    <main>
        <form>
            <input type="text" placeholder="Search for a word..." >
        </form>
        <section>
            <h2>{{ .data.Word }}</h2>
            <ul>
                {{ range .data.Content }}
                <li>{{ .Reference }}: "{{ .Verse }}"</li>
                {{ end }}
            </ul>
        </section>
    </main>

    {{ template "partials/footer" . }}
</body>
</html>
{{ end }}